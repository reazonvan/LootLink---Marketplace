[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    */migrations/*,
    venv/,
    env/,
    .tox/,
    build/,
    dist/,
    .eggs/,
    *.egg-info/,
    logs/

ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # module imported but unused (sometimes needed for Django)

per-file-ignores =
    __init__.py:F401
    settings.py:E501

max-complexity = 10
